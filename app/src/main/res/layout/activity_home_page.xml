<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".HomePage">

    <Button
        android:id="@+id/scorekeeper"
        android:layout_width="150dp"
        android:layout_height="290dp"
        android:background="@drawable/tr"
        android:fontFamily="@font/comfortaa"
        android:foregroundTintMode="add"
        android:gravity="center"
        android:paddingBottom="90dp"
        android:text="@string/scorekeeper"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18" />

    <Button
        android:id="@+id/bdrills"
        android:layout_width="150dp"
        android:layout_height="290dp"
        android:background="@drawable/dr"
        android:fontFamily="@font/comfortaa"
        android:foregroundTintMode="add"
        android:gravity="center"
        android:text="@string/conditioning"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946" />

    <Button
        android:id="@+id/teamregis"
        android:layout_width="150dp"
        android:layout_height="290dp"
        android:background="@drawable/tl"
        android:fontFamily="@font/comfortaa"
        android:foregroundTint="#F79123"
        android:foregroundTintMode="add"
        android:gravity="center"
        android:text="@string/teamregis"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18" />
    <!--android:paddingLeft="12dp"
android:gravity="center"-->

    <Button
        android:id="@+id/playstats"
        android:layout_width="150dp"
        android:layout_height="290dp"
        android:background="@drawable/dl"
        android:fontFamily="@font/comfortaa"
        android:foregroundTintMode="add"
        android:gravity="center"
        android:text="@string/livescoreboard"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946" />

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="53dp"
        android:layout_height="58dp"
        android:backgroundTint="#FFFFFF"
        android:contentDescription="@string/logo"
        android:src="@android:drawable/ic_menu_preferences"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        tools:src="@android:drawable/ic_menu_preferences" />


</androidx.constraintlayout.widget.ConstraintLayout>