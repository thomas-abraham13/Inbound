<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    tools:context=".HomePage">

    <Button
        android:id="@+id/scorekeeper"
        android:layout_width="170dp"
        android:layout_height="300dp"
        android:backgroundTint="#F79123"
        android:fontFamily="@font/comfortaa"
        android:foregroundTint="#F79123"
        android:foregroundTintMode="add"
        android:gravity="center"
        android:paddingBottom="90dp"
        android:text="@string/scorekeeper"
        android:textAlignment="gravity"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.93"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18" />

    <Button
        android:id="@+id/bdrills"
        android:layout_width="170dp"
        android:layout_height="300dp"
        android:backgroundTint="#F79123"
        android:fontFamily="@font/comfortaa"
        android:foregroundTint="#F79123"
        android:foregroundTintMode="add"
        android:gravity="center"
        android:text="@string/bdrills"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946" />

    <Button
        android:id="@+id/teamregis"
        android:layout_width="170dp"
        android:layout_height="300dp"
        android:backgroundTint="#F79123"
        android:fontFamily="@font/comfortaa"
        android:foregroundTint="#F79123"
        android:foregroundTintMode="add"
        android:gravity="center"
        android:text="@string/teamregis"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18" />
<!--android:paddingLeft="12dp"
android:gravity="center"-->

    <Button
        android:id="@+id/playstats"
        android:layout_width="170dp"
        android:layout_height="300dp"
        android:backgroundTint="#F79123"
        android:fontFamily="@font/comfortaa"
        android:foregroundTint="#F79123"
        android:foregroundTintMode="add"
        android:gravity="center"
        android:text="@string/playerstats"
        android:textColor="#000000"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.095"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946" />

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:drawable/ic_menu_preferences"
        android:contentDescription="@string/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01"
        app:srcCompat="@color/colorAccent" />


</androidx.constraintlayout.widget.ConstraintLayout>